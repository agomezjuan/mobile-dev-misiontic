<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.appvoto.tictaxi.Intro.LosPermisos"
    android:background="@color/fondoLayauth"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:ignore="Autofill,HardcodedText,TextFields, UnusedAttribute, IncludeLayoutParam, ContentDescription, TooManyViews, VectorDrawableCompat, RtlHardcoded, KeyboardInaccessibleWidget, ObsoleteLayoutParam, NotSibling, RtlSymmetry, ScrollViewSize, UselessParent, ButtonStyle, TextViewEdits">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_permisos_intro"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/tictaxi_cdo" />

        <TextView
            android:id="@+id/txt_perm_iniTit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proyecto MisiónTIC2021"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:layout_below="@id/img_permisos_intro"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_perm_ini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scrollbars="vertical"
            android:text="Autorizaciones, infraestructura, inicialización."
            android:textColor="@color/colorPrimaryDark" />

        <RadioButton
            android:id="@+id/rb_vercompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_perm_ini"
            android:buttonTint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:text="Ver completo..."
            android:textColor="@color/colorPrimary"
            tools:visibility="gone" />

        <Button
            android:id="@+id/btn_perm_ini"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_perm_ini"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/rojoscuro"
            android:text="Autorizar"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/chbx_aceptcluf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Acepto los términos del contrato"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible" />

    </LinearLayout>

</ScrollView>